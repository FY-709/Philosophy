<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:background="@color/sys_dialog_setting_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/txtreadr_menu_chapter_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一章"
            android:textColor="@color/sys_dialog_setting_word"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/txtreadr_menu_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:paddingTop="5dp"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@mipmap/thumb" />

        <TextView
            android:id="@+id/txtreadr_menu_chapter_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一章"
            android:textColor="@color/sys_dialog_setting_word"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/sys_dialog_setting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/directory" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="目录"
                android:textColor="@color/sys_dialog_setting_word" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtreadr_menu_textsize_del"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/setting_btn_bg2"
            android:gravity="center"
            android:text="A-"
            android:textColor="@color/sys_dialog_setting_word_bright" />

        <TextView
            android:id="@+id/txtreadr_menu_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="70"
            android:textColor="@color/sys_dialog_setting_word_bright" />

        <TextView
            android:id="@+id/txtreadr_menu_textsize_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/setting_btn_bg2"
            android:gravity="center"
            android:text="A+"
            android:textColor="@color/sys_dialog_setting_word_bright"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtreadr_menu_textsetting1_normal"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setting_btn_bg"
            android:gravity="center"
            android:text="正常"
            android:textColor="@drawable/setting_btn_bg_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtreadr_menu_textsetting1_bold"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setting_btn_bg"
            android:gravity="center"
            android:text="加粗"
            android:textColor="@drawable/setting_btn_bg_color"
            android:textSize="15sp" />
    </LinearLayout>

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/sys_dialog_setting_line" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hwtxtreader_menu_style1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting_common_style_btn_bg" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hwtxtreader_menu_style2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting_leather_style_btn_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hwtxtreader_menu_style3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting_protect_eye_style_btn_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hwtxtreader_menu_style4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting_breen_style_btn_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hwtxtreader_menu_style5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/setting_blue_deep_style_btn_bg" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtreadr_menu_textsetting2_cover"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setting_btn_bg"
            android:gravity="center"
            android:text="覆盖"
            android:textColor="@drawable/setting_btn_bg_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtreadr_menu_textsetting2_translate"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setting_btn_bg"
            android:gravity="center"
            android:text="滑动"
            android:textColor="@drawable/setting_btn_bg_color"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>